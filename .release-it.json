{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull"],
    "after:bump": "npx auto-changelog -p"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "ðŸš€ Enhancements"
          },
          {
            "type": "fix",
            "section": "ðŸ©¹ Fixes"
          },
          {
            "type": "perf",
            "section": "ðŸ”¥ Performance"
          },
          {
            "type": "test",
            "section": "âœ… Tests"
          },
          {
            "type": "ci",
            "section": "ðŸ¤– CI"
          },
          {
            "type": "chore",
            "section": "âž• Other"
          }
        ]
      },
      "context": {
        "hideAuthor": "renovate[bot]"
      }
    }
  }
}